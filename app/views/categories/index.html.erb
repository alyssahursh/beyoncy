<h1 class="center-text padding-top">See Products by Category</h1>

<div class="row small-up-1 medium-up-2 large-up-3">
  <% @categories.each do |category| %>
  <article class="column">
      <%=link_to image_tag(category.picture, :alt => "category photo", :title => category.name), category_path(category.id) %>
      <p class="center-text"><%= link_to category.name, category_path(category.id) %></p>
  </article>
  <% end %>
</div>
