<h1>See Products by Category</h1>

<% @categories.each do |category| %>
<article>
  <ul>
    <li><%=link_to image_tag(category.picture, :alt => "category photo", :title => category.name), category_path(category.id) %></li>
    <li><%= link_to category.name, category_path(category.id) %></li>
  </ul>

</article>

<% end %>
