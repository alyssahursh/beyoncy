<h1 class="center-text">Shop <%= @category.name %></h1>

<div class="row small-up-1 medium-up-2 large-up-3">
  <% Product.where(category_id: @category.id).each do |product| %>
  <article class="column">
    <%=link_to((image_tag(product.picture, :alt => product.name, :title => product.name)), product_path(product.id))%>
    <h3><%= link_to product.name, product_path(product.id) %></h3>
    <%= image_tag "#{product.average_rating}lemon.jpg" %>
    <h4><%= number_to_currency((product.price/100.0)) %></h4>
  </article>
  <% end %>
</div>
