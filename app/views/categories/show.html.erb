<h3> <%= @category.name %> </h3>
<% Product.where(category_id: @category.id).each do |product| %>
<article>
  <ul>
    <li><%=link_to((image_tag(product.picture, :alt => "product photo", :title => product.name)), product_path(product.id))%></li>
    <li> <%= product.name %> </li>
    <!-- would like to add the lemons here -->
  </ul>
</article>
<% end %>
