<h1><%= @product.name %></h1>

<section>
  <p><%=@product.description%></p>
  <p><%=@product.price%></p>
  <p><%=image_tag(@product.picture, :alt => "product photo", :title => "Product")%></p>
</section>

<section>
  <% @product.reviews.each do |review| %>
    <p><%= review.subject %></p>
    <p><%= review.body %></p>
    <p><%= review.rating %></p>
  <% end %>
<!-- may want to add an option to edit reviews on this page (only available if user is logged in and it is their review) -->
</section>

<ul>
  <li>
     <%= button_to 'Add to Cart', controller: :orders, :class => "button", method: :get  %>
  </li>
</ul>

<!-- need to add if statement here later - only see these options if they are admin. -->
<ul>
  <li><%= button_to 'Edit Product', edit_product_path(params[:id]), :class => "button", method: :get %></li>
<!-- what if product is inactive already - should we add if statement here so that button changes to be "Mark As Active"? -->
  <li><%= button_to 'Mark as Inactive', product_path(params[:id]), :class => "button", method: :delete, data: {confirm: 'Are you sure you want to make this product inactive?'} %>
  </li>
</ul>
