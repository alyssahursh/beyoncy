<h1>Products</h1>
<% @products.each do |product| %>

  <article>
    <ul>
      <li><%=link_to image_tag(product.picture, :alt => "product photo", :title => product.name), product_path(product.id) %></li>
      <li><%= link_to product.name, product_path(product.id) %></li>
    </ul>

  </article>

<% end %>
