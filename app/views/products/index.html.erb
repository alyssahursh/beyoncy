<h1 class="center-text padding-top"> All Products</h1>
<p class="flash-notice"><%= render partial: 'shared/flash_notice' %></p>

<div class="row small-up-1 medium-up-2 large-up-3">
  <% @products.each do |product| %>
  <article class="column">
    <% if product.active %>
      <%=link_to image_tag(product.image.url(:medium), :alt => "product photo", :title => product.name), product_path(product.id) %>
      <p class="center-text"><%= link_to product.name, product_path(product.id) %></p>
    <% end %>
  </article>
  <% end %>
</div>


<% if !session[:user_id].nil? %>
  <% if @user.admin %>
  <h2>Inactive Products</h2>
  <div class="row small-up-1 medium-up-2 large-up-3">
    <% @products.each do |product| %>
    <article class="column">
      <% if !product.active %>
        <%=link_to image_tag(product.image.url(:medium), :alt => "product photo", :title => product.name), product_path(product.id) %>
        <p class="center-text"><%= link_to product.name, product_path(product.id) %></p>
      <% end %>
      </article>
    <% end %>
  <% end %>
<% end %>
</div>

<!-- if search form in nav bar returns nothing -->
<section>
  <% if @products.blank? %>
    <h4>There are no products containing the search term <em><%= params[:search] %></em>.</h4>
  <% end %>
</section>
